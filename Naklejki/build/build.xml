<?xml version="1.0" encoding="UTF-8"?>
	<project name="Naklejki" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="C:\Program Files\Java\jdk1.8.0_60\lib\ant-javafx.jar"/>
				<file name="C:\Program Files\Java\jdk1.8.0_60\jre\lib\jfxrt.jar"/>
				<file name="${basedir}"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
	
		<mkdir dir="externalLibs" />
	
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Lukasz\.m2\repository\org\apache\pdfbox\pdfbox\1.8.10">
				<filename name="pdfbox-1.8.10.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Lukasz\.m2\repository\org\controlsfx\controlsfx\8.40.9">
				<filename name="controlsfx-8.40.9.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Lukasz\.m2\repository\org\apache\pdfbox\fontbox\1.8.10">
				<filename name="fontbox-1.8.10.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Lukasz\.m2\repository\commons-logging\commons-logging\1.1.1">
				<filename name="commons-logging-1.1.1.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Lukasz\.m2\repository\log4j\log4j\1.2.14">
				<filename name="log4j-1.2.14.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Lukasz\.m2\repository\org\apache\pdfbox\jempbox\1.8.10">
				<filename name="jempbox-1.8.10.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Lukasz\.m2\repository\org\controlsfx\openjfx-dialogs\1.0.3">
				<filename name="openjfx-dialogs-1.0.3.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Lukasz\.m2\repository\com\google\zxing\core\3.2.1">
				<filename name="core-3.2.1.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Lukasz\.m2\repository\net\sourceforge\jexcelapi\jxl\2.6.12">
				<filename name="jxl-2.6.12.jar"/>
			</fileset>
		</copy>
	
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="D:\Dokumenty\git\Naklejki">
				<include name="src/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="log4j-1.2.14.jar"/>
				<include name="core-3.2.1.jar"/>
				<include name="openjfx-dialogs-1.0.3.jar"/>
				<include name="fontbox-1.8.10.jar"/>
				<include name="jempbox-1.8.10.jar"/>
				<include name="commons-logging-1.1.1.jar"/>
				<include name="pdfbox-1.8.10.jar"/>
				<include name="controlsfx-8.40.9.jar"/>
				<include name="jxl-2.6.12.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="Cp1250">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="Naklejki.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="Naklejki"
			mainClass="eu.luckyApp.stickers.view.Main"
			toolkit="fx"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/Naklejki.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="LuckyApp"/>
				<attribute name="Implementation-Title" value="Naklejki"/>
				<attribute name="Implementation-Version" value="1"/>
				<attribute name="SplashScreen-Image" value="splash.jpg"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="Naklejki" nativeBundles="all"
			updatemode="background" >
	
			<fx:platform basedir="C:\Program Files\Java\jdk1.8.0_60"/>
			<fx:info title="Naklejki" vendor="LuckyApp"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	
		<fx:csstobin outdir="build/classes">
			<fileset dir="build/classes" includes="**/*.css"/>
		</fx:csstobin>
	
	</target>
</project>
